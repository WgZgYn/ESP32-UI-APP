#---------------------------------------------------------------------------
# Project related configuration options
#---------------------------------------------------------------------------

# 项目名称
PROJECT_NAME           = "ESP32"

# 项目简短描述
PROJECT_BRIEF          = "UI MQTT NetworkManager Game View"

# 项目的主要文档入口页面，可以设置为 README 文件
# USE_MDFILE_AS_MAINPAGE = README.md

# 项目版本
PROJECT_NUMBER         = "1.0"

#---------------------------------------------------------------------------
# Build related configuration options
#---------------------------------------------------------------------------

# 输出文档的格式，常用 HTML 和 LaTeX
OUTPUT_FORMAT          = html

# 输出文档的目录
OUTPUT_DIRECTORY       = ./docs

# 是否递归查找源码目录
RECURSIVE              = YES

#---------------------------------------------------------------------------
# Configuration options related to source code parsing
#---------------------------------------------------------------------------

# 源代码文件扩展名，常用的 C/C++ 文件类型
FILE_PATTERNS          = *.cpp *.h *.c *.hpp *.ino

# 是否提取所有注释
EXTRACT_ALL            = YES

# 是否提取私有部分（类的私有成员）
EXTRACT_PRIVATE        = YES

# 是否提取静态成员
EXTRACT_STATIC         = YES

# 是否提取类的内部部分
EXTRACT_LOCAL_CLASSES  = YES

#---------------------------------------------------------------------------
# Options related to external tools
#---------------------------------------------------------------------------

# 启用 Graphviz，用于生成类图和调用图
HAVE_DOT               = YES

# Graphviz 的 dot 工具路径
DOT_PATH               = D:\Program Files\Graphviz\bin\dot.exe

#---------------------------------------------------------------------------
# Configuration options related to the output
#---------------------------------------------------------------------------

# 是否生成类继承图
CLASS_DIAGRAMS         = YES

# 是否生成继承图
INHERITANCE_GRAPH      = YES

# 是否生成调用图
CALL_GRAPH             = YES

# 是否生成被调用图
CALLER_GRAPH           = YES

# 调用图中显示的最大节点数，避免图表过于复杂
DOT_GRAPH_MAX_NODES    = 50

# 调用图中显示的最大深度
MAX_DOT_GRAPH_DEPTH    = 3

# 是否显示 UML 类图
UML_LOOK               = YES

#---------------------------------------------------------------------------
# Options related to the documentation layout
#---------------------------------------------------------------------------

# 是否生成类成员的详细文档
FULL_PATH_NAMES        = YES

# 是否显示文件的源代码
SOURCE_BROWSER         = YES

# 显示成员的简要说明
INLINE_INHERITED_MEMB  = YES

# 是否生成每个文件的调用图
REFERENCED_BY_RELATION = YES

#---------------------------------------------------------------------------
# Options related to filtering and pre-processing
#---------------------------------------------------------------------------

# 编译器预处理定义，模拟编译条件
PREDEFINED             = _DEBUG

# 是否启用 Markdown 格式支持
MARKDOWN_SUPPORT       = YES

# 允许自动链接注释中的 URL
AUTOLINK_SUPPORT       = YES

#---------------------------------------------------------------------------
# Configuration options related to warnings and progress output
#---------------------------------------------------------------------------

# 是否显示缺少文档的警告
WARN_IF_UNDOCUMENTED   = YES

# 日志文件的名称
WARN_LOGFILE           = doxygen_warnings.log

#---------------------------------------------------------------------------
# Configuration options related to the dot tool
#---------------------------------------------------------------------------

# 启用 Graphviz dot 工具生成的继承图、类图和调用图
HAVE_DOT               = YES

# 使用 class 关系图
CLASS_GRAPH            = YES

# 是否显示图标大小
DOT_TRANSPARENT        = YES

# Dot 工具生成的图片格式
DOT_IMAGE_FORMAT       = png

# 类图中使用 UML 样式
UML_LOOK               = YES

#---------------------------------------------------------------------------
# Options related to sorting and grouping
#---------------------------------------------------------------------------

# 按照字母顺序排列类、函数等文档
SORT_MEMBER_DOCS       = YES

# 分组函数和类
ENABLE_PREPROCESSING   = YES

#---------------------------------------------------------------------------
# Options related to searching
#---------------------------------------------------------------------------

# 启用搜索功能（HTML 文档中）
SEARCHENGINE           = YES
